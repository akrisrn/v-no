body
  margin 0

  &, .markdown-body pre, .markdown-body code, .vssue-pagination-select
    transition background-color 0.5s

  header
    transition color 0.5s, border-bottom-color 0.5s

  .markdown-body:not(footer), .markdown-body a, .vssue-new-comment-input, .vssue-edit-comment-input, #search-input
    transition color 0.5s

  .markdown-body hr, .markdown-body h1, .markdown-body h2, .markdown-body table thead tr
    transition border-bottom-color 0.5s

  .markdown-body table tr + tr, footer
    transition border-top-color 0.5s

  .markdown-body img, .markdown-body kbd
    transition filter 0.5s

  &.dark
    header
      border-bottom-color $dark-border-color !important

    header, .markdown-body, .btn, .vssue, .vssue-new-comment-input, .vssue-edit-comment-input, #search-input
      color $dark-font-color !important

    .markdown-body
      a
        color $dark-link-font-color !important

      hr, h1, h2
        border-bottom-color $dark-border-color !important

      pre, code
        background-color $dark-pre-background-color !important

      table
        thead tr
          border-bottom-color $dark-border-color !important

        tr + tr
          border-top-color $dark-border-color !important

      img, kbd
        filter brightness($dark-image-brightness) !important

    main, .vssue, .vssue-pagination-select
      background-color $dark-main-background-color !important

    footer, .vssue
      border-top-color $dark-border-color !important

    .vssue-button:disabled
      color $dark-border-color !important
      border-color $dark-border-color !important
