main
  max-width $max-width
  padding $unit * 5 $unit * 7
  margin $unit * 5 auto
  box-shadow $box-shadow
  background-color $main-background-color
  transition padding 0.5s, margin 0.5s, background-color 0.5s, box-shadow 0.5s

  @media screen and (max-width: $media-max-width)
    padding $unit * 3
    margin 0 auto

  header
    color $font-color
    font-family $font-family
    font-size $unit * 4
    font-weight $strong-font-weight
    margin $unit-s * 2 0 $unit * 2
    padding-bottom $unit-s * 2
    border-bottom 1px solid $border-color
    transition color 0.5s, border-bottom-color 0.5s, padding-bottom 0.5s

  article
    transition color 0.5s

  footer
    opacity 1
    height 27px
    margin-top $unit * 2
    padding-top $unit
    border-top 1px solid $border-color
    transition border-top-color 0.5s, opacity 0.5s, height 0.5s, margin-top 0.5s, padding-top 0.5s

    a.home:before
      content 'Â« '

  .date
    float right
    color $gray-font-color
    transition color 0.5s

  .hidden
    display none

  .center
    text-align center

  #cover
    margin-bottom $unit-s * 2
    transition margin-bottom 0.5s

    img
      max-width 100%
      max-height 600px

  #bar
    opacity 1
    height 27px
    transition color 0.5s, opacity 0.5s, height 0.5s

    code
      display inline-block
      font-size $font-size-xs
      padding-top 0
      padding-bottom 0
      margin-right $unit

      &.item-date
        background-color $info-color-xs

      &.item-author
        background-color $success-color-xs

        &:before
          content '@'
          margin-right 2px

      &.item-tag
        background-color $warning-color-xs

        &:before
          content '#'
          margin-right 2px

      &.item-count
        background-color $danger-color-xs

        &:after
          content 'W'
          margin-left 2px

      &.item-version
        opacity 0
        transition opacity 0.5s

        &:hover
          opacity 1

  picture
    position relative

    &:hover
      .original
        opacity 0.7

    .original
      position absolute
      right 0
      bottom 0
      margin 0 $unit $unit * 2 0
      padding 0 $unit
      background-color $main-background-color
      border-radius 10px
      font-family $font-family
      font-size $font-size-xs
      font-weight $strong-font-weight
      line-height $line-height
      color $font-color
      cursor pointer
      opacity 0
      transition opacity 0.5s
